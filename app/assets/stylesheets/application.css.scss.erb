    padding: 16px 16px 12px;
  }
}

@media(pointer: coarse) {
  .hover-container:hover .borders:before,
  .hover-container:hover .borders:after,
  .active .borders:before,
  .active .borders:after {
    display: none;
  }

  .active .borders
  .active .borders {
    text-decoration: underline;
  }

  .tool-tip:before,
  .tool-tip:after,
  .tool-tip:hover:after,
  .tool-tip:hover:before {
    display: none;
  }

  .lite-shadow.hover::after {
    display: none;
  }

  a:hover .lite-shadow.hover::after {
    display: none;
  }

  .grid-item:hover .hover-box { display: none; }
}
