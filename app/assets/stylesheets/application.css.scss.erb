.row { flex-direction: row; }
.col-row { flex-direction: row; }
.row-r { flex-direction: row-reverse; }
.col { flex-direction: column; }
.col-r { flex-direction: column-reverse; }

.j-start { justify-content: flex-start; }
.j-end { justify-content: flex-end; }
.j-center { justify-content: center; }
.btw { justify-content: space-between; }
.around { justify-content: space-around; }
.even { justify-content: space-evenly; }

.a-a { align-self: auto; }
.a-start { align-self: flex-start; }
.a-end { align-self: flex-end; }
.a-center { align-self: center; }


.center { align-items: center; }
.base { align-items: baseline; }
.stretch { align-items: stretch; }
.zero {
  padding: 0;
  margin: 0;
}
.zero-children > * {
  padding: 0;
  margin: 0;
}

.half-w-space,
.half-w-space-no-full { width: 49%; }
