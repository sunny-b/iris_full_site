 /* Fonts */

@font-face {
  font-family: "National Book";
  src: url("<%= font_path('NationalWeb-Book.woff') %>") format('woff'),
       url("<%= font_path('NationalWeb-Book.woff2') %>") format('woff2');
}

@font-face {
  font-family: "National Medium";
  src: url("<%= font_path('NationalWeb-Medium.woff') %>") format('woff'),
       url("<%= font_path('NationalWeb-Medium.woff2') %>") format('woff2');
}

@font-face {
  font-family: "National Italic";
  src: url("<%= font_path('NationalWeb-BookItalic.woff') %>") format('woff'),
       url("<%= font_path('NationalWeb-BookItalic.woff2') %>") format('woff2');
}

@font-face {
  font-family: "Super Display";
  src: url("<%= font_path('GT-Super-Display-Regular.woff') %>") format('woff'),
       url("<%= font_path('GT-Super-Display-Regular.woff2') %>") format('woff2');
}

@font-face {
  font-family: "Super Bold";
  src: url("<%= font_path('GT-Super-Display-Bold-Italic.woff') %>") format('woff'),
       url("<%= font_path('GT-Super-Display-Bold-Italic.woff2') %>") format('woff2');
}

* {
  -webkit-font-smoothing: antialiased; /* Chrome, Safari */
  -moz-osx-font-smoothing: grayscale; /* Firefox */
}

/* Animations */

@keyframes rising-clap-small {
  0% {
    opacity: 0;
    bottom: -100px;
  }

  50% {
    opacity: 1;
    bottom: 50px;
  }

  100% {
    opacity: 0;
    bottom: 200px;
  }
}

@keyframes rising-clap-big {
  0% {
    opacity: 0;
    bottom: -100px;
  }

  50% {
    opacity: 1;
    bottom: 15px;
  }


  100% {
    opacity: 0;
    bottom: 130px;
  }
}

.small-clap {
  animation: rising-clap-small 1.5s infinite;
  animation-timing-function: linear;
}
.big-clap {
  animation: rising-clap-big 1.5s infinite;
  animation-delay: 0.75s;
  animation-timing-function: linear;
}

.link-hover {
  transition: all 0.3s ease;
}

.link-hover:hover {
  color: rgb(225, 231, 242);
  border-color: rgb(225, 231, 242);
}


 /* Flexbox */

