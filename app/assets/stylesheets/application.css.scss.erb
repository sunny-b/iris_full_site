  margin: 0 auto;
}
.underline { border-bottom: 1px white solid; }
.gimme-less-space, .desktop-gimme-less-space { margin-top: 16px; }
.gimme-space, .desktop-gimme-space { margin-top: 24px; }
.gimme-space-bottom { margin-bottom: 24px; }
.gimme-more-space { margin-top: 40px; }
.shift { transform: translateX(-10px); }
.box-shadow { box-shadow: 0 11px 80px 0 rgba(42,0,108,0.53); }
.box-shadow-top { box-shadow: 0 -7px 80px 7px rgba(42,0,108,0.33); }
.space-bottom { padding-bottom: 120px; }
.less-space-bottom { padding-bottom: 72px; }
.relative { position: relative; }
.absolute { position: absolute; }
.right-hand {
  left: 51%;
  width: 60%;
}
.left-hand {
  left: -14%;
  width: 70%;
}
.fill {
  height: 100%;
  width: 100%;
}
.round-corners { border-radius: 8px; }
.mobile, .mobile-only { display: none; }
.desktop { display: block; }
.block { display: block; }
.max-550 { max-width: 550px; }
.max-400 { max-width: 400px; }

p {
  margin: 5px 0;
}

a {
  cursor: pointer;
  color: #F0F0F0;
  text-decoration: none;
}

ul { list-style-type: none; }
li { line-height: 1.4em; }
nav {
  padding-bottom: 24px;
  flex-direction: row;
}

.box-shadow { box-shadow: 0 11px 80px 0 rgba(42,0,108,0.53); }
.lite-shadow {
  box-shadow: 0 8px 26px 0 rgba(23,43,255,0.17);
  animation: all 2s ease;
}

.hover-container {
  padding: 5px 10px;
  display: inline-block;
  position: relative;
}

.hover-container a {
  width: 100%;
  height: 100%;
}

.borders:before,
.borders:after {
  content: "";
  position: absolute;
  bottom: -2px;
  width: 0;
  height: 1px;
  transition: all 0.2s ease-in;
  opacity: 0;
  background-color: white;
}

.borders:after { right: 0; }
.borders:before { left: 0; }

.hover-container:hover .borders:before,
.hover-container:hover .borders:after,
.active .borders:before,
.active .borders:after {
  opacity: 1;
  width: 50%;
}

.intro,
.writing { max-width: 795px; }

/* Hover Box */

.hover-box {
  z-index: 10;
  background-color: #F2F2F2;
  height: 100%;
  width: 100%;
  border-radius: 8px;
  opacity: 0;
  position: absolute;
  box-sizing: border-box;
  transition: opacity 0.3s ease;
  overflow: hidden;
}
.large-hover { padding: 88px; }
.small-hover { padding: 45px; }
.black-font { color: #4B4B4B; }
.moving-text {
  position: relative;
  top: 180px;
  transition: top 0.2s ease;
}

.grid-item { position: relative; }
.grid-item:hover { cursor: url("<%= image_path('https://iris-site.nyc3.cdn.digitaloceanspaces.com/tilted-hand.svg') %>"), auto; }
.grid-item:hover .hover-box { opacity: 0.93; }
.grid-item:hover .moving-text { top: 0; }
.grid-item img { display: block; }

/* Carousel */

#carousel {
  position: relative;
  height: 42.31975vw;
  box-shadow: 0 11px 80px 0 rgba(42,0,108,0.53);
  overflow: hidden;
}

.carousel-inner { position: relative; }
.carousel-item {
  position: absolute;
  opacity: 0;
  transition: opacity 0.1s ease-in;
}
.carousel-item.active { opacity: 1; }

.carousel-control-next,
.carousel-control-prev {
  position: absolute;
  top: 0;
  height: 100%;
  z-index: 10;
}

.carousel-control-next:hover, {
  cursor: url("<%= image_path('side-hand.svg') %>"), auto;
}

.carousel-control-prev:hover {
  cursor: url("<%= image_path('hand-left.svg') %>"), auto;
}

.carousel-control-next.not-active:hover,
.carousel-control-prev.not-active:hover {
  cursor: default;
}

.carousel-control-next { right: 0; }
.carousel-control-prev { left: 0; }

.carousel-nav {
  position: absolute;
  height: 70%;
  min-height: 140px;
  width: 100%;
  bottom: -100%;
  left: 0;
  z-index: 20;
  background: white;
  box-sizing: border-box;
  padding: 4% 9% 5%;
  transition: all 0.5s ease;
}
.carousel-nav.show { bottom: 0; }

.carousel-nav-next a:hover,
.carousel-nav-prev a:hover {
  cursor: url("<%= image_path('https://iris-site.nyc3.cdn.digitaloceanspaces.com/tilted-hand.svg') %>"), auto;
}

.lite-shadow.hover::after {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  transition: opacity 1s cubic-bezier(.165, .84, .44, 1);
  box-shadow: 0 8px 17px 0 rgba(42,0,108,0.53);
  border-radius: 8px;
  content: '';
  opacity: 0;
  z-index: 19;
}

a:hover .lite-shadow.hover::after {
  opacity: 1;
}

.lite-shadow.hover {
  height: 17vw;
  position: relative;
}

/* Responsiveness */

.medium-wrapper { max-width: 400px; }
.medium-icon {
  width: 100%;
}

.bear-pic {
  width: 36%;
}

.contact-links {
  width: 200px;
  padding-top: 24px;
}

.tool-tip {
  position: relative;
  z-index: 2;
}

/* Hide the tooltip content by default */
.tool-tip:before,
.tool-tip:after {
  visibility: hidden;
  opacity: 0;
  pointer-events: none;
}

/* Position tooltip above the element */
.tool-tip:before {
  position: absolute;
  top: 33px;
  left: -22px;
  padding: 8px;
  height: 28px;
  border-radius: 8px;
  background-color: #222222;
  color: #fff;
  content: attr(data-tooltip);
  font-family: "National Book", "Poppins", Helvetica, sans-serif;
  text-align: center;
  font-size: 15px;
  line-height: 2;
  box-shadow: 0 2px 15px 0 rgba(0,0,0,0.5);
}

/* Triangle hack to make tooltip look like a speech bubble */
.tool-tip:after {
  position: absolute;
  top: 28px;
  left: 55%;
  margin-left: -5px;
  width: 0;
  border-bottom: 5px solid #222222;
  border-right: 5px solid transparent;
  border-left: 5px solid transparent;
  content: " ";
  font-size: 0;
  line-height: 0;
}

/* Show tooltip content on hover */
.tool-tip:hover:before,
.tool-tip:hover:after {
  visibility: visible;
  opacity: 1;
}

